%h1 Categories
%table.table.table-striped
  %thead
    %tr
      %th Name
  %tbody
    - @categories.each do |category|
      %tr
        %td 
          = category.name
          = link_to "Destroy", category, :method => :delete, :confirm => "Are you sure", :class => "btn btn-min btn-danger"
          = link_to "Edit", edit_category_path(category), :class => 'btn btn-mini',:remote => true
          - category.sub_categories.each do |subcategory|
            %td 
              = subcategory.name
              = link_to "Destroy", category_path(subcategory), :method => :delete, :confirm => "Are you sure", :class => "btn btn-min btn-danger"
              = link_to "Edit", edit_category_path(category), :class => 'btn btn-mini',:remote => true

= link_to "Add Category", new_category_path, :class => "btn btn-primary"
