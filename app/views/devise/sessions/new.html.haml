#login
  %h2 Sign in
  .form-horizontal.sign_in_content{role: "form"}
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-group
        = f.label :email, :class => "col-sm-2 control-label"
        .col-sm-10
          = f.email_field :email, :autofocus => true, :class => "form-control", :type => "email", :placeholder => "Email"
      %br/
      .form-group
        = f.label :password, :class => "col-sm-2 control-label"
        .col-sm-10
          = f.password_field :password, :class => "form-control", :type => "password", :placeholder => "Password"
      - if devise_mapping.rememberable?
        .form-group
          = f.label :remember_me, :class => "col-sm-2 control-label"
          .col-sm-10
            = f.check_box :remember_me, :class => "checkbox"
      .form-group.reg_button
        .col-sm-10
          = f.submit "Login", :class => "btn btn-default form-control login_button", :type => "submit"
    = render "devise/shared/links"