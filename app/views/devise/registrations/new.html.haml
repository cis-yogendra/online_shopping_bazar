#registration
  %h2 Sign up
  .form-horizontal.sign_up_content{role: "form"}
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email, :class => "col-sm-2 control-label"
        .col-sm-10
          = f.email_field :email, :autofocus => true, :class => "form-control", :type => "email", :placeholder => "Email"
      %br/
      .form-group
        = f.label :password, :class => "col-sm-2 control-label"
        .col-sm-10
          = f.password_field :password, :class => "form-control", :type => "password", :placeholder => "Password"
      %br/
      .form-group
        = f.label :password_confirmation, :class => "col-sm-2 control-label"
        .col-sm-10
          = f.password_field :password_confirmation, :class => "form-control", :type => "password", :placeholder => "Confirm Password"
      %br/
      / .form-group
      /   = f.label :image, :class => "col-sm-2 control-label"
      /   .col-sm-10
      /     = f.file_field :image, :class => "form-control"
      %br/
      / .field
      /   = f.label :address
      /   %br/
      /   = f.text_field :address, :class => 'address-picker-input'
      / .field
      /   = f.label :address_latitude
      /   %br/
      /   = f.text_field :address_latitude, :readonly => true, :class => 'address-picker-latitude'
      / .field
      /   = f.label :address_longitude
      /   %br/
      /   = f.text_field :address_longitude, :readonly => true, :class => 'address-picker-longitude'
      / .field
      /   = f.label :address_locality
      /   %br/
      /   = f.text_field :address_locality, :readonly => true, :class => 'address-picker-locality'
      / .field
      /   = f.label :address_country
      /   %br/
      /   = f.text_field :address_country, :readonly => true, :class => 'address-picker-country'
      .form-group.reg_button
        .col-sm-10
          = f.submit "Registration", :class => "btn btn-default form-control", :type => "submit"
    = render "devise/shared/links"